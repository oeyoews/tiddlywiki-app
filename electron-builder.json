{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "tiddlywiki.app",
  "asar": true,
  "directories": {
    "buildResources": "src/assets",
    "output": "release"
  },
  "artifactName": "${version}/${name}_${version}-${os}-${arch}.${ext}",
  "files": [
    "src"
  ],
  "mac": {
    "artifactName": "${productName}_${version}.${ext}",
    "target": [
      "dmg",
      "zip"
    ]
  },
  "linux": {
    "target": "AppImage",
    "category": "Utility"
  },
  "win": {
    "target": [
      "nsis",
      "zip",
      "msi"
    ],
    "artifactName": "${productName}_${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "publish": {
    "provider": "generic",
    "channel": "latest",
    "url": "https://github.com/oeyoews/tiddlywiki-app/releases/download/latest"
  }
}